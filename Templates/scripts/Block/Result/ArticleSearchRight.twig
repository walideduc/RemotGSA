{% set cssSite = {'www.bfmtv.com': 'rub2', 'www.business.bfmtv.com': 'rub3', 'www.rmcsport.bfmtv.com': 'rub4', 'www.01net.com': 'rub5'} %}
<div class="bloc bg-color-1 padding-inside-all">
    <p class="h4">
        Articles associés à
        <strong>{{ response_article.value.parameters['q']['value'] }}</strong>
    </p>
    <ul class="bloc list-unstyled">
        {% for index, result in response_article.value.results %}

        <li class="border-b-s modulx1">
            <article class="row">

                <div class="media-body modulx1 table-display col-xs-12 col-md-12">
                    <div class="table-cell-middle">
                        <a href="{{ result.getUrl() }}">
                            <div class="color-txt-1">
                                <span class="border-l border-color"></span>
                                {{ result.getMetaTag('site') }}
                            </div>
                            <h2 class="title-small no-margin">{{ result.getMetaTag('title')|truncate(60, false, '&hellip;')|raw}}</h2>
                        </a>
                    </div>
                </div>
            </article>
        </li>
        {% endfor %}
    </ul>
</div>