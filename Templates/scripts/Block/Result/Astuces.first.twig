<li class="bloc clearfix art-bloc {{  cssSite[articleSite] }}">
   <article class="row">
      <div class="hidden-xs col-sm-3 col-md-3">
         <a href="{{ result.getDisplayurl() }}">
            <figure class="figure border-default">
               <img class="article-img img-responsive-l" width="130" height="65" alt="" src="{{ result.getMetaTag('thumbnailpublicurl') }}">
            </figure>
         </a>
      </div>
      <div class="col-xs-12 col-sm-9 col-md-9 art-body">
          <a title="{{ result.title | striptags }}" href="{{ result.getUrl() }}">
            <h2 class="h4 media-heading">
               {{ result.getMetaTag('title') | raw}}
            </h2>
         </a>
         <div class="color-txt-1">
            <span class="border-l border-color"></span>
            {{ result.getMetaTag('site') }} -
            <i class="fa fa-clock-o"></i>
            <time datetime="{{ result.getMetaTag('lastmodifieddate') }}" itemprop="datePublished">
                {% if result.getMetaTag('lastmodifieddate')|date('d/m/y') == now|date('d/m/y') %}
                    il y a {{ result.getMetaTag('lastmodifieddate')|time_ago }}
                {% else %}
                    le {{ result.getMetaTag('lastmodifieddate')|date("d/m/Y") }}
                    {# Ã  {{ result.getMetaTag('lastmodifieddate')|date("H:i") }} #}
                {% endif %}
            </time>
         </div>
      </div>
      <p>{{ result.getSnippet() | raw }}</p>
   </article>
</li>