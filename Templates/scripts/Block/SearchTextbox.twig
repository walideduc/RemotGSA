<div {{ this.bbcontent(null, {'class': 'recherche padding-top bloc'})|raw }}>

	<form class="form-horizontal searchForm" role="search" action="{{ this.getObject().getParamValue('search_results_page') }}" method="get" autocomplete="off">
		<div id="custom-search-input">
            <div class="input-group col-md-12">
                <input type="text" class="search-query noshadow form-control" placeholder="Recherche..." name="q" value="{{ this.getObject().getParamValue('query') }}">
                <input type="hidden" name="filter" value="0">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="fa fa-search fa-lg"></i>
                    </button>
                </span>
            </div>
        </div>
    </form>

</div>
